{
  "manifest_version": 2,
  "name": "Save Page as Markdown",
  "version": "1.0",
  "permissions": ["activeTab", "downloads"],
  "background": {
    "scripts": ["build/background.js"]
  },
  "browser_action": {
    "default_title": "Save as Markdown"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["build/content.bundle.js"]
    }
  ]
}
